<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PickMeal.PickMeal.mapper.TokenMapper">

    <insert id="saveToken" parameterType="PickMeal.PickMeal.domain.PasswordResetToken">
        INSERT INTO password_reset_token (user_id, token, expiry_date)
        VALUES (#{userId}, #{token}, #{expiryDate})
    </insert>

    <select id="findByToken" resultType="PickMeal.PickMeal.domain.PasswordResetToken">
        SELECT
        user_id AS userId,
        token,
        expiry_date AS expiryDate
        FROM password_reset_token
        WHERE token = #{token}
    </select>

    <delete id="deleteToken">
        DELETE FROM password_reset_token WHERE token = #{token}
    </delete>

</mapper>